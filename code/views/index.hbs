        <div class="index_navi">
            <h3>快捷导航</h3>
        </div>

        <!--图片链接-->
        <div class="index_pic_link">
            <div style="margin: 0 auto auto 19vw" data-tip="联系维修人员"><a href="/con_rep"><img src="http://114.115.254.117/images/cont_serv.png" alt="cont_serv"></a></div>
