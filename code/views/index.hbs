    <script>
        function validateForm(){
            var x=document.forms["login"]["id"].value;
            var y=document.forms["login"]["pwd"].value;
            if (x==null || x==""){
                alert("账号必须填写");
                return false;
            }
            if(y==null || y==""){
                alert("密码必须填写")
            }
        }
    </script>
    <link href="../public/stylesheets/style.css" rel="stylesheet" type="text/css"/>
</head>
{{>header}}
<body>

    <div>

        <!--背景图片-->
